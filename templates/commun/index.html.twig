{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %}Hello Commune!{% endblock %}

{% block body %}
{% include "header.html.twig" %}
<div class="container-fuild pt-5 pl-2">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-success p-3">
                    <h6 class="py-3 text-center"> {{ message }}  </h6>
                    </div>
                {% endfor %}
                <div class="card-header">Ajouter une Commune</div>
                <div class="card-body">
                      {{ form_start(form) }} 

                      {{ form_end(form) }} 
                </div>
            </div>
        </div>
          <div class="col-md-6">
        <div class="card">
        <div class="card-header">La Liste des commune</div>
        <div class="card-body">
                <table class="table table-bordered">
                <thead>
                    <tr>
                    <th scope="col">id</th>
                    <th scope="col">Libelle</th>
                    <th scope="col">Tarif</th>
                    <th scope="col">Montant Max</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                        {% for item in communs %}
                            <tr>
                                <th scope="row">{{item.id}}</th>
                                <td class="text-center">{{item.libelle}}</td>
                                <td class="text-center">{{item.tarif}} cfa </td>
                                <td class="text-center">{{item.montantMax}}</td>
                                <td>
                                        <a class="btn btn-warning" href="">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                            </svg> 
                                        </a>
                                        <a class="btn btn-primary" href="{{path('commun-edit',{'id': item.id})}}">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                            </svg>
                                        </a>
                                        <a class="btn btn-danger" onclick="return confirm(`Voulez-vous Confirmer la Suppression {{item.libelle}}?`)"  href="{{path('delete-commun',{'id': item.id})}}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-x" viewBox="0 0 16 16">
                                        <path d="M6.854 7.146a.5.5 0 1 0-.708.708L7.293 9l-1.147 1.146a.5.5 0 0 0 .708.708L8 9.707l1.146 1.147a.5.5 0 0 0 .708-.708L8.707 9l1.147-1.146a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146z"/>
                                        <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z"/>
                                        </svg>  
                                        </a>
                                        
                                 </td>
                              
                            </tr>
                        {% endfor %}
                </tbody>
                <tfooter>
                 {#    {% if items | length > 0 %}
                        <tr>
                            <td colspan="5">Totale</td>
                            <td><h5>{{Totale}} <span>cfa</span></h5></td>
                        </tr>
                        
                      
                    {% endif %} #}
                    
                </tfooter>
            </table>
        </div>
    </div>
    </div>
</div>
<div class="pt-5">
    {% include "footer.html.twig" %}
</div>
{% endblock %}
